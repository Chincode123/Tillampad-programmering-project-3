{
  "window_size": [ 1280, 720 ],
  "type": "window",
  "text_color": [ 255, 255, 255, 255 ],
  "border_color": [ 255, 255, 255, 255 ],
  "selection_color": [ 0, 0, 255, 255 ],
  "background_color": [ 0, 0, 0, 255 ],
  "font_size": 20,
  "direction": 0,
  "padding": 10,
  "number_of_sections": 2,
  "sections": [
    {
      "type": "window",
      "direction": 1,
      "number_of_sections": 3,
      "sections": [
        {
          "type": "window",
          "direction": 0,
          "number_of_sections": 2,
          "sections": [
            {
              "type": "window",
              "direction": 0,
              "number_of_sections": 0
            },
            {
              "type": "window",
              "border_color": [ 255, 0, 0, 255 ],
              "direction": 1,
              "number_of_sections": 2,
              "sections": [
                {
                  "type": "window",
                  "direction": 0,
                  "number_of_sections": 0
                },
                {
                  "type": "window",
                  "direction": 0,
                  "number_of_sections": 0
                }
              ]
            }
          ]
        },
        {
          "type": "window",
          "direction": 0,
          "number_of_sections": 0
        },
        {
          "type": "window",
          "direction": 1,
          "number_of_sections": 2,
          "sections": [
            {
              "type": "window",
              "direction": 0,
              "number_of_sections": 0
            },
            {
              "type": "window",
              "direction": 0,
              "number_of_sections": 1,
              "sections": [
                {
                  "type": "text",
                  "text_color": [ 0, 255, 0, 255 ],
                  "font_size": 15,
                  "number_of_text_segments": 2,
                  "text_segments": [
                    {
                      "text": "This text is GREEN!!!"
                    },
                    {
                      "text": "\nVariables can be displayed in multiple places, fps: %f",
                      "variable": {
                        "name": "frames_per_second",
                        "type": "float"
                      }
                    }
                  ]
                }
              ]

            }
          ]
        }
      ]
    },
    {
      "type": "window",
      "direction": 0,
      "number_of_sections": 1,
      "background_color": [ 200, 50, 150, 255 ],
      "sections": [
        {
          "type": "text",
          "number_of_text_segments": 8,
          "text_segments": [
            {
              "text": "this is some text"
            },
            {
              "text": " this text is in a second segment"
            },
            {
              "text": "\nthis text shows how many frames have passed: %d",
              "variable": {
                "name": "frames_passed",
                "type": "int"
              }
            },
            {
              "text": "\nthis text shows the fps: %f",
              "variable": {
                "name": "frames_per_second",
                "type": "float"
              }
            },
            {
              "text": "\nIs the current frame even? %s",
              "variable": {
                "name": "even_or_odd_frame",
                "type": "string"
              }
            },
            {
              "text": "\nYou can also show multiple variables in one line:"
            },
            {
              "text": "\nThere have passed over %d",
              "variable": {
                "name": "frames_passed_prefix",
                "type": "int"
              }
            },
            {
              "text": " %s frames!",
              "variable": {
                "name": "frames_passed_suffix",
                "type": "string"
              }
            }
          ]
        }
      ]
    }
  ]
}
